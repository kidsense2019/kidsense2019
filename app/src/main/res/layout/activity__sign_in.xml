<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signIn">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        android:padding="10dp"
        android:background="@drawable/round_button"
        android:id="@+id/login_form">

        <TextView
            android:id="@+id/email_singIn_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/allerta_stencil"
            android:text="Email / Nickname"
            android:textColor="#D3D3D3"
            android:textSize="17dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/email_SignIn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/email_singIn_tv"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:layout_marginTop="10dp"
            android:padding="10dip"
            android:textColor="#000000"
            android:background="@drawable/round_edit_text" />

        <EditText
            android:id="@+id/password_signIn_guardian"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/email_singIn_tv"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:inputType="textPassword"
            android:padding="10dip"
            android:textColor="#000000"
            android:background="@drawable/round_edit_text" />

        <EditText
            android:id="@+id/password_signIn_kid"
            android:visibility="invisible"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/email_singIn_tv"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:textAlignment="center"
            android:inputType="number"
            android:padding="10dip"
            android:textColor="#000000"
            android:hint="@string/four_digit_password_hint"
            android:textColorHint="#868686"
            android:background="@drawable/shape" />


    </RelativeLayout>

    <Button
        android:id="@+id/signIn_req"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_form"
        android:layout_alignEnd="@+id/login_form"
        android:layout_marginTop="45dp"
        android:textColor="#D3D3D3"
        android:background="@drawable/round_button"
        android:fontFamily="@font/allerta_stencil"
        android:textStyle="bold"
        android:text="Sign In Request" />

    <Button
        android:id="@+id/signIn_Kid"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_form"
        android:layout_alignEnd="@+id/login_form"
        android:layout_marginTop="45dp"
        android:textColor="#D3D3D3"
        android:visibility="invisible"
        android:enabled="false"
        android:background="@drawable/round_button"
        android:fontFamily="@font/allerta_stencil"
        android:textStyle="bold"
        android:text="Sign In" />

    <Button
        android:id="@+id/signIn_Guardian"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_form"
        android:layout_alignEnd="@+id/login_form"
        android:layout_marginTop="45dp"
        android:textColor="#D3D3D3"
        android:visibility="invisible"
        android:enabled="false"
        android:background="@drawable/round_button"
        android:fontFamily="@font/allerta_stencil"
        android:textStyle="bold"
        android:text="Sign In" />

    <TextView
        android:id="@+id/signUp_page"
        android:layout_below="@+id/signIn_req"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Sign Up For Kidsense"
        android:layout_marginTop = "25dp"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:textColor="#1eb980"
        android:textStyle="italic"
        />

    <LinearLayout
        android:layout_below="@+id/signUp_page"
        android:layout_marginBottom="35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_kidsense_logo"
            android:layout_gravity="bottom"/>

        <TextView
        android:id="@+id/kid_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="K"
        android:paddingLeft="3dp"
        android:textSize="20dp"
        android:textColor="#FF0000"
        android:layout_gravity="bottom"
        android:textStyle="italic"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="i"
            android:textSize="20dp"
            android:textColor="#FFD400"
            android:layout_gravity="bottom"
            android:textStyle="italic"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="D"
            android:textSize="20dp"
            android:textColor="#2FFF00"
            android:layout_gravity="bottom"
            android:textStyle="italic"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:paddingLeft="1dp"
            android:text="sense"
            android:textSize="15dp"
            android:textColor="#00FFFF"
            android:layout_gravity="bottom"
            android:textStyle="italic"
            />

    </LinearLayout>

</RelativeLayout>