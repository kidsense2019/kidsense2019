<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#424242"
        >

        <RelativeLayout
            android:id="@+id/heart_rate_value_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#424242">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Heart Rate : "
                android:textColor="#FFFFFF"
                android:id="@+id/hearRateTitle"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginRight="7dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/heartRate"
                android:textColor="#FFFFFF"
                android:layout_toRightOf="@+id/hearRateTitle"
                android:layout_alignParentTop="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/dateData"
                android:layout_below="@+id/heartRate"
                android:layout_alignParentStart="true"
                android:textColor="#FFEB3B"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/timeData"
                android:layout_below="@+id/dateData"
                android:layout_alignParentStart="true"
                android:textColor="#FFEB3B"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>
