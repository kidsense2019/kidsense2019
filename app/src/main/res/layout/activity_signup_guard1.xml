<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bck">

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:background="#1D000000"
        android:padding="10dp">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Email"
            android:textColor="#D3D3D3"
            android:textSize="20dp"
            android:textStyle="bold"
            android:fontFamily="@font/allerta_stencil"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/email_signUP_G"
            android:layout_marginTop="10dp"
            android:text="Name"
            android:textColor="#D3D3D3"
            android:textSize="20dp"
            android:textStyle="bold"
            android:fontFamily="@font/allerta_stencil"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/username_signUP_G"
            android:layout_marginTop="10dp"
            android:text="Password"
            android:textColor="#D3D3D3"
            android:textSize="20dp"
            android:textStyle="bold"
            android:fontFamily="@font/allerta_stencil"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/password_signUP_G"
            android:layout_marginTop="10dp"
            android:text="Confirm Password"
            android:textColor="#D3D3D3"
            android:textSize="20dp"
            android:textStyle="bold"
            android:fontFamily="@font/allerta_stencil"/>


        <AutoCompleteTextView
            android:id="@+id/email_signUP_G"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView1"
            android:background="@drawable/round_edit_text"
            android:padding="10dip"
            android:textColor="#D3D3D3"
            android:inputType="textPersonName"
            />

        <EditText
            android:id="@+id/username_signUP_G"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView2"
            android:background="@drawable/round_edit_text"
            android:padding="10dip"
            android:textColor="#D3D3D3"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/password_signUP_G"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView3"
            android:background="@drawable/round_edit_text"
            android:padding="10dip"
            android:textColor="#D3D3D3"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/conf_password_signUP_G"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView4"
            android:background="@drawable/round_edit_text"
            android:padding="10dip"
            android:textColor="#D3D3D3"
            android:inputType="textPassword" />


    </RelativeLayout>

    <Button
        android:id="@+id/signUP_G"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/round_button"
        android:text="Sign Up"
        android:textColor="#D3D3D3"
        android:fontFamily="@font/allerta_stencil"
        android:textStyle="bold"/>


</RelativeLayout>